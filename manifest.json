{
  "manifest_version": 3,
  "name": "Bino Buddy",
  "version": "1.0",
  "description": "Send a WhatsApp message to Bino with your search",
  "icons": {
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "notifications",
    "scripting",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
